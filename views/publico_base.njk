<html>

<head>
    <title> {% block titulo %} {% endblock %}</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
<body>

    <!-- barra de navegacion comun para todos -->
    <div class="container">
        <div class="alert alert-secondary">
            <a class="btn btn-primary" href="/">Inicio</a>
            &nbsp;&nbsp;
            <a class="btn btn-primary" href="/admin/juegos">Administracion</a>
            &nbsp;&nbsp;

            {% if (session and session.usuario) %}
            <a class="btn btn-danger" href="/auth/logout">Logout</a>
            {% else %}
            <a class="btn btn-success" href="/auth/login">Login</a>
            {% endif %}
        </div>


        <div>

            <!--aqui va el contenido que envia cada njk a esta plantilla-->
            {% block contenido %} {% endblock %}

        </div>
    </div>


</body>

</html>